---
interface Props {
	url: string;
	name: string;
	isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<!-- href={ `/pokemons/${name}` } -->
<a 
	href={ `/pokemons/${name}` }
	class:list={[
		`rounded-2xl flex flex-col justify-center items-center p-2 hover:border-violet-500 transition-all`,
		{
			'border': !isBig,
		},
	]}
>
		<img src={imageSrc} alt={name}
			transition:name={`${name}-image`}
			class:list={[
				{
					'w-100 h-100': isBig,
					'w-23 h-23': !isBig,
				},
			]}
		>
		<span 
			class:list={[
				`capitalize`,
				{
					'text-4xl text-orange-200': isBig,
				},
			]}
		>#{id} {name}
		</span>
</a>